<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical" >
    
    <EditText 
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_light"
        android:gravity="right"
        android:cursorVisible="false"
        android:editable="false"
        android:text="0"
        android:textSize="35sp"
        />
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text=" MEM :"
            />
        <TextView 
            android:id="@+id/mem"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/_drg"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text=" DEG:"
            />
        <Button 
            android:id="@+id/mc"
            android:layout_width="106sp"
            android:layout_height="wrap_content"
            android:text="MC"
            />
        <Button 
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            />
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/drg"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="DRG"
            />
        <Button 
            android:id="@+id/sin"
            android:layout_width="53sp"
            android:layout_height="match_parent"
            android:text="cos"
            />
        <Button 
            android:id="@+id/cos"
            android:layout_width="53sp"
            android:layout_height="match_parent"
            android:text="cos"
            />
        <Button 
            android:id="@+id/tan"
            android:layout_width="53sp"
            android:layout_height="match_parent"
            android:text="tan"
            />
        <Button 
            android:id="@+id/factorial"
            android:layout_width="53sp"
            android:layout_height="match_parent"
            android:text="n!"
            />
        <Button 
            android:id="@+id/bksp"
            android:layout_width="53sp"
            android:layout_height="match_parent"
            android:text="Bksp"
            android:textSize="13sp"
            />
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/seven"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="7"
            />
        <Button 
            android:id="@+id/eight"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="8"
            />
        <Button 
            android:id="@+id/nine"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="9"
            />
        <Button 
            android:id="@+id/div"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="/"
            />
        <Button 
            android:id="@+id/left"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="("
            />
        <Button 
            android:id="@+id/right"
            android:layout_width="53sp"
            android:layout_height="wrap_content"	
            android:text=")"
            />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/four"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="4"
            />
        <Button 
            android:id="@+id/five"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="5"
            />
        <Button 
            android:id="@+id/six"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="6"
            />
        <Button 
            android:id="@+id/mul"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="*"
            />
        <Button 
            android:id="@+id/sqrt"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="√"
            />
        <Button 
            android:id="@+id/square"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="^"
            />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/one"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="1"
            />
        <Button 
            android:id="@+id/two"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <Button 
            android:id="@+id/three"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="3"
            />
        <Button 
            android:id="@+id/sub"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="-"
            />
        <Button
            android:id="@+id/log"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="log"
            />
        <Button 
            android:id="@+id/ln"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="ln"
            />
    </TableRow>
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/zero"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="0"
            />
        <Button 
            android:id="@+id/dot"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="."
            />
        <Button 
            android:id="@+id/equal"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="="
            />
        <Button 
            android:id="@+id/add"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="+"
            />
        <Button 
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exit"
            />
           
    </TableRow>
    
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:layout_width="45sp"
            android:layout_height="wrap_content"
            android:text=" 提示:"
            />
        <TextView 
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎使用"
            />
    </TableRow>
    
</LinearLayout>
